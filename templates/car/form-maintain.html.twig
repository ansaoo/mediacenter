
<button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="modal" data-target="#new-maintain-entry">
    {{ 'task.new'|trans }}
</button>
<div class="modal inmodal" id="new-maintain-entry" tabindex="-1" role="dialog"  aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <i class="fa fa-clock-o modal-icon"></i>
                <h4 class="modal-title">{{ 'form.title'|trans }}</h4>
            </div>
            <form class="form-vertical new-task" name="entretien_task" action="{{ path('car_data_maintain_new') }}" method="post">
                <div class="modal-body">
                    <div class="form-group" id="data_2">
                        <label for="entretien_task_date">Simple data input format</label>
                        <div class="input-group date">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input id="entretien_task_date" type="text" name="entretien_task[date]" class="form-control" autocomplete="off">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="entretien_task_compteur">{{ 'form.maintain.compteur'|trans }}</label>
                        <input id="entretien_task_compteur" type="text" class="form-control" name="entretien_task[compteur]" placeholder="166000">
                    </div>
                    <div class="form-group">
                        <label for="entretien_task_libelle">{{ 'form.maintain.libelle'|trans }}</label>
                        <input id="entretien_task_libelle" type="text" class="form-control" name="entretien_task[libelle]" placeholder="Vidange">
                    </div>
                    <div class="form-group">
                        <label for="entretien_task_prix">{{ 'form.maintain.prix'|trans }}</label>
                        <input id="entretien_task_prix" type="text" class="form-control" name="entretien_task[prix]" placeholder="80">
                    </div>
                    <div class="form-group">
                        <label for="entretien_task_lieu">{{ 'form.maintain.lieu'|trans }}</label>
                        <input id="entretien_task_lieu" type="text" class="form-control" name="entretien_task[lieu]" placeholder="Oyonnax">
                    </div>
                    <div class="form-group">
                        <label for="entretien_task_garage">{{ 'form.maintain.garage'|trans }}</label>
                        <input id="entretien_task_garage" type="text" class="form-control" name="entretien_task[garage]" placeholder="Dominguez">
                    </div>
                    <div class="form-group">
                        <label for="entretien_task_voitureId">{{ 'form.maintain.voiture'|trans }}</label>
                        <select id="entretien_task_voitureId" name="entretien_task[voitureId]" class="form-control">
                            <option value="1">Celica</option>
                            <option value="2" selected>Laguna</option>
                        </select>
                    </div>
                </div>
                <input type="hidden" id="entretien_task__token" name="entretien_task[_token]"
                       value="{{ csrf_token('maintain') }}">
                <div class="modal-footer">
                    <button type="submit" id="entretien_task_submit" name="entretien_task[submit]" class="btn btn-primary">{{ 'form.submit'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
</div>